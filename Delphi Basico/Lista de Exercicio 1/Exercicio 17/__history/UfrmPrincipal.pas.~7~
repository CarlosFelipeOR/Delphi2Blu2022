unit UfrmPrincipal;

interface

uses
  Winapi.Windows, Winapi.Messages, System.SysUtils, System.Variants, System.Classes, Vcl.Graphics,
  Vcl.Controls, Vcl.Forms, Vcl.Dialogs, Vcl.StdCtrls;

type
  TForm1 = class(TForm)
    btnIniciar: TButton;
    lblResultado: TLabel;
    procedure btnIniciarClick(Sender: TObject);
  private
    { Private declarations }
    procedure Verificação;
  public
    { Public declarations }
  end;

var
  Form1: TForm1;

implementation

{$R *.dfm}


procedure Tform1.Verificação;
var
  xNome : String;
  xListaNumero : Array[0..79] of Double;
  i, xContador : Integer;
begin
  while i <= 4 do
    begin
    xListaNumero [i] := StrToFloat( inputbox(
                        'Cadastro dos Números','Informe um número',''));

    if (xListaNumero [i] >= 10) and (xListaNumero [i] <= 150) then
      xContador := xContador + 1 ;
    end;

  lblResultado.Caption := FloatToStr(xContador);

end;



procedure TForm1.btnIniciarClick(Sender: TObject);
begin
  Self.Verificação;
end;

end.
