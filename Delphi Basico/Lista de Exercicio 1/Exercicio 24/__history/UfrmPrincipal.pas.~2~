unit UfrmPrincipal;

interface

uses
  Winapi.Windows, Winapi.Messages, System.SysUtils, System.Variants, System.Classes, Vcl.Graphics,
  Vcl.Controls, Vcl.Forms, Vcl.Dialogs, Vcl.StdCtrls;

type
  TForm1 = class(TForm)
    Label1: TLabel;
    btnIniciar: TButton;
    mmListaNumeros: TMemo;
    procedure btnIniciarClick(Sender: TObject);
  private
    { Private declarations }
    procedure Verificar;
  public
    { Public declarations }
  end;

var
  Form1: TForm1;

implementation

{$R *.dfm}

procedure Tform1.Verificar;
var
  xNumero : Double;
begin

  repeat
    if not TryStrToFloat(inputbox( 'Cadastro dos Números','Insira um número:',''),
                       xNumero) then;
      raise Exception.Create('Erro: Insira um número');



  until (True);


end;

procedure TForm1.btnIniciarClick(Sender: TObject);
begin
  Self.Verificar;
end;

end.
