unit UfrmPrincipal;

interface

uses
  Winapi.Windows, Winapi.Messages, System.SysUtils, System.Variants, System.Classes, Vcl.Graphics,
  Vcl.Controls, Vcl.Forms, Vcl.Dialogs, Vcl.StdCtrls;

type
  TForm1 = class(TForm)
    edtModelo: TEdit;
    edtAno: TEdit;
    Label1: TLabel;
    Label2: TLabel;
    edtValor: TEdit;
    Label3: TLabel;
    Button1: TButton;
    mmValoresCalculados: TMemo;
    procedure Button1Click(Sender: TObject);
  private
    { Private declarations }
    procedure CalcularDesconto;
  public
    { Public declarations }
  end;

var
  Form1: TForm1;

implementation

{$R *.dfm}

procedure Tform1.CalcularDesconto;
var
  xModelo : String;
  xValorSemDesconto, xValorComDesconto, xValorDesconto : Double;
  xAno : Integer;
begin
  xModelo := inputbox( 'Cálculo de Desconto','Modelo','');
  xAno := StrToInt(inputbox( 'Cálculo de Desconto','Ano',''));
  xValorSemDesconto :=StrToInt(inputbox( 'Cálculo de Desconto',
                                         'Valor Sem Desconto',''));
  if xAno <= 2000 then
    xValorDesconto :=  xValorSemDesconto * 0.12
  else
    xValorDesconto :=  xValorSemDesconto * 0.7;
  xValorComDesconto := xValorSemDesconto - xValorDesconto;

  mmValoresCalculados.lines.Add(edtModelo.Text + ': De R$' +
                                FormatFloat('#0.##', xValorSemDesconto)
                                + ' Por R$' +
                                FormatFloat('#0.##', xValorComDesconto) +
                                 '. Total de desconto: ' +
                                FormatFloat('#0.##', xValorDesconto));

end;

procedure TForm1.Button1Click(Sender: TObject);
begin
  Self.CalcularDesconto;
end;

end.
