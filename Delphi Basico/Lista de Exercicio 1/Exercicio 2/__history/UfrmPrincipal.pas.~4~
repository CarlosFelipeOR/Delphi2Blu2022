unit UfrmPrincipal;

interface

uses
  Winapi.Windows, Winapi.Messages, System.SysUtils, System.Variants, System.Classes, Vcl.Graphics,
  Vcl.Controls, Vcl.Forms, Vcl.Dialogs, Vcl.StdCtrls;

type
  EnumOperacao = (stSoma, stSubtração, stMultiplicação,stDivisão);

  TForm1 = class(TForm)
    edtNumero1: TEdit;
    edtNumero2: TEdit;
    btnExecutar: TButton;
    cmbOperacao: TComboBox;
    procedure btnExecutarClick(Sender: TObject);
  private
    { Private declarations }
  public
    { Public declarations }
  end;

var
  Form1: TForm1;

implementation

{$R *.dfm}

procedure TForm1.btnExecutarClick(Sender: TObject);
var
  xResultado : Integer;
  xResultadoDivisao : Double;

begin
  case EnumOperacao(cmbOperacao.ItemIndex) of
    stSoma:
      xResultado := StrToInt(edtNumero1.Text) + StrToInt(edtNumero2.Text);

    stSubtração:
      xResultado := StrToInt(edtNumero1.Text) - StrToInt(edtNumero2.Text);

    stMultiplicação:
      xResultado := StrToInt(edtNumero1.Text) * StrToInt(edtNumero2.Text);

    stDivisão:
      xResultadoDivisao := StrToFloat(edtNumero1.Text) /
                           StrToFloat(edtNumero2.Text);

  end;

  ShowMessage ('O resultado é: ' + FloatToStr(xResultado));
end;

end.
